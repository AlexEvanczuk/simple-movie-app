source 'https://rubygems.org'

gem 'sinatra'

ruby '2.3.0'

gem 'activerecord'
gem 'sinatra-activerecord'
gem 'rake'
gem 'json'
# A debugging tool for ruby
gem 'pry'
# Allows us to easily make http requests
gem 'httparty'
# Sinatra shell
gem 'tux'
# Password encryption
gem 'bcrypt'
# User authentication
gem 'sinatra-simple-authentication'

# These gems are only to be used in development
group :development do
  # Creates more useful error pages
  gem 'better_errors'
  gem 'binding_of_caller'
  # Reloads app on any changes for faster development
  gem 'rerun'
end

# PostgreSQL database
gem 'pg'